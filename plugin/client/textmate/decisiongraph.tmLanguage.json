{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DecisionGraph",
	"scopeName": "source.dg",
	"comment": "guide can be found here - https://macromates.com/manual/en/language_grammars   |  for oniguruma regex - https://raw.githubusercontent.com/kkos/oniguruma/master/doc/RE",
	"patterns": [
		{"include": "#descriptions"}
		,{"include": "#comments"}
		,{"include": "#keywords"}
	],
	"repository": {
		"descriptions": {
			"name": "string.quoted.double.decisiongraph",
			"begin": "\\[",
			"end": "\\]"
		},
		"keywords": {
			"patterns" : [
				{"include": "#one_of"}
				,{"include": "#some_of"}
				,{"include": "#consists_of"}
				,{"include": "#todo"}
			]
		},
		"one_of": {
			"name": "keyword.decisiongraph",
			"match": "\\b(one\\s*of)\\b"
		},
		"some_of": {
			"name": "keyword.decisiongraph",
			"match": "\\b(some\\s*of)\\b"
		},
		"consists_of": {
			"name": "keyword.decisiongraph",
			"match": "\\b(consists\\s*of)\\b"
		},
		"todo": {
			"name": "keyword.decisiongraph",
			"match": "\\b(todo|TODO)\\b"
		},

		"comments": {
			"patterns": [
				{"include": "#line_comment"}
				,{"include": "#block_comment"}
			]
		},
		"line_comment": {
			"patterns": [
				{
					"name": "comment.line.decisiongraph",
					"begin": "<--",
					"end": "\n"
				}
			]
		},
		"block_comment": {
			"patterns": [
				{
					"name": "comment.block.decisiongraph",
					"begin": "<\\*",
					"end": "\\*>"
				}
			]
		}
	}
}
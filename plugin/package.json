{
	"name": "policymodels-lsp",
	"description": "A language server example",
	"author": "wolfj123, ofirbed, arielAmselBGU, shiraev",
	"license": "MIT",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/wolfj123/PolicyModelsPlugin"
	},
	"publisher": "policymodels-lsp",
	"categories": [
		"Other"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.41.0"
	},
	"activationEvents": [
		"onLanguage:policyspace",
		"onLanguage:policyModelDescription",
		"onLanguage:localizedModel",
		"onLanguage:localiztion",
		"onLanguage:valueInference",
		"onCommand:extension.viewconfig"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Server configuration",
			"properties": {
				"PolicyModelsServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"PolicyModelsServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"grammars": [
			{
				"language": "policyspace",
				"scopeName": "source.pspace",
				"path": "./client/textmate/policyspace.tmLanguage.json"
			}
		],
		"languages": [
			{
				"id": "policyspace",
				"aliases": [
					"PolicySpace",
					"policyspace"
				],
				"extensions": [
					".pspace",
					".ps"
				],
				"configuration": "./client/pspace-graph-language-configuration.json"
			},
			{
				"id": "policyModelDescription",
				"aliases": [
					"policymodelDescription",
					"policyModeldescription",
					"policyModel Description",
					"policy model description"
				],
				"firstLine": "<policy-model>",
				"filenamePatterns": [
					"policy-model.xml"
				],
				"configuration": "./policymodel-xml-file-configuration.json"
			},
			{
				"id": "localizedModel",
				"firstLine": "<localized-model>",
				"filenamePatterns": [
					"localized-model.xml"
				],
				"configuration": "./policymodel-xml-file-configuration.json"
			},
			{
				"id": "localiztion",
				"extensions": [
					".md"
				],
				"configuration": "./pspace-graph-language-configuration.json"
			},
			{
				"id": "valueInference",
				"extensions": [
					".vi"
				],
				"configuration": "./pspace-graph-language-configuration.json"
			},
			{
				"id": "dummyconfig",
				"aliases": [
					"DummyConfig",
					"dc"
				],
				"extensions": [
					".json"
				]
			}
		],
		"commands": [
			{
				"command": "extension.viewconfig",
				"title": "Display config JSON.",
				"category": "Webview React"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "npm-run-all compile:*",
		"watch": "npm-run-all -p watch:*",
		"compile:extension": "tsc -p ./",
		"compile:views": "webpack --mode development",
		"watch:extension": "tsc -watch -p ./",
		"watch:views": "webpack --watch --mode development",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test-server": "cd ./server && npm test && cd ../",
		"test-client": "cd ./client && npm test && cd ../",
		"test": "npm run test-server && npm run test-client && sh ./scripts/e2e.sh  "
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.30",
		"css-loader": "^3.4.2",
		"npm-run-all": "^4.1.5",
		"style-loader": "^1.1.3",
		"ts-loader": "^6.2.2",
		"tslint": "^5.20.1",
		"typescript": "^3.8.3",
		"webpack": "^4.42.1",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {}
}

{
	"name": "policymodels-lsp",
	"description": "A language server example",
	"author": "Jonathan Wolf, Shira Evron, Ofir Bedarshi, Ariel Amsel",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/wolfj123/PolicyModelsPlugin"
	},
	"publisher": "policymodels-lsp",
	"categories": [
		"Other"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.41.0"
	},
	"activationEvents": [
		"onLanguage:policyspace",
		"onLanguage:decisionGraph",
		"onLanguage:policyModelDescription",
		"onLanguage:localizedModel",
		"onLanguage:localiztion",
		"onLanguage:valueInference"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Server configuration",
			"properties": {
				"PolicyModelsServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"PolicyModelsServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [
			{
				"id": "policyspace",
				"aliases": [
					"PolicySpace",
					"policyspace"
				],
				"extensions": [
					".pspace"
				],
				"configuration": "./pspace-graph-language-configuration.json"
			},
			{
				"id": "decisionGraph",
				"aliases": [
					"decisiongraph",
					"DecisionGraph"
				],
				"extensions": [
					".dg"
				],
				"configuration": "./pspace-graph-language-configuration.json"
			},
			{
				"id": "policyModelDescription",
				"aliases": [
					"policymodelDescription",
					"policyModeldescription",
					"policyModel Description",
					"policy model description"
				],
				"firstLine": "<policy-model>",
				"filenamePatterns": [
					"policy-model.xml"
				],
				"configuration": "./policymodel-xml-file-configuration.json"
			},
			{
				"id": "localizedModel",
				"firstLine": "<localized-model>",
				"filenamePatterns": [
					"localized-model.xml"
				],
				"configuration": "./policymodel-xml-file-configuration.json"
			},
			{
				"id": "localiztion",
				"extensions": [
					".md"
				],
				"configuration": "./pspace-graph-language-configuration.json"
			},
			{
				"id": "valueInference",
				"extensions": [
					".vi"
				],
				"configuration": "./pspace-graph-language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "policyspace",
				"scopeName": "source.pspace",
				"path": "./syntaxes/policyspace.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test-server": "cd ./server && npm test && cd ../",
		"test": "npm run test-server && sh ./scripts/e2e.sh "
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"tslint": "^5.16.0",
		"typescript": "^3.6.4"
	},
	"dependencies": {}
}

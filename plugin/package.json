{
	"name": "policymodels-lsp",
	"description": "A language server example",
	"author": "wolfj123, ofirbed, arielAmselBGU, shiraev",
	"license": "MIT",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/wolfj123/PolicyModelsPlugin"
	},
	"publisher": "policymodels-lsp",
	"categories": [
		"Other"
	],
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test-server": "cd ./server && npm test && cd ../",
		"test-client": "cd ./client && npm test && cd ../",
		"test": "npm run test-server && npm run test-client && sh ./scripts/e2e.sh  "
	},
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.41.0"
	},
	"activationEvents": [
		"onLanguage:policyspace",
		"onLanguage:decisiongraph",
		"onLanguage:policyModelDescription",
		"onLanguage:localizedModel",
		"onLanguage:localiztion",
		"onLanguage:valueinference"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Server configuration",
			"properties": {
				"PolicyModelsServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"PolicyModelsServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"grammars": [
			{
				"language": "policyspace",
				"scopeName": "source.pspace",
				"path": "./client/textmate/policyspace.tmLanguage.json"
			},
			{
				"language": "decisiongraph",
				"scopeName": "source.dg",
				"path": "./client/textmate/decisiongraph.tmLanguage.json"
			},
			{
				"language": "valueinference",
				"scopeName": "source.vi",
				"path": "./client/textmate/valueinference.tmLanguage.json"
			}
		],
		"languages": [
			{
				"id": "policyspace",
				"aliases": [
					"PolicySpace",
					"policyspace"
				],
				"extensions": [
					".pspace",
					".ps"
				],
				"configuration": "./pspace-language-configuration.json"
			},
			{
				"id": "decisiongraph",
				"aliases": [
					"DecisionGraph",
					"decisiongraph"
				],
				"extensions": [
					".dg"
				],
				"configuration": "./decisiongraph-language-configuration.json"
			},
			{
				"id": "policyModelDescription",
				"aliases": [
					"policymodelDescription",
					"policyModeldescription",
					"policyModel Description",
					"policy model description"
				],
				"firstLine": "<policy-model>",
				"filenamePatterns": [
					"policy-model.xml"
				],
				"configuration": "./policymodel-xml-file-configuration.json"
			},
			{
				"id": "localizedModel",
				"firstLine": "<localized-model>",
				"filenamePatterns": [
					"localized-model.xml"
				],
				"configuration": "./policymodel-xml-file-configuration.json"
			},
			{
				"id": "localiztion",
				"extensions": [
					".md"
				],
				"configuration": "./pspace-graph-language-configuration.json"
			},
			{
				"id": "valueinference",
				"extensions": [
					".vi"
				],
				"configuration": "./valueinference-language-configuration.json"
			}
		]
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.32",
		"tree-sitter-cli": "^0.16.5",
		"tree-sitter-valueinference": "^0.0.2",
		"tree-sitter-policyspace": "^0.0.4",
		"tree-sitter-decisiongraph": "^0.1.1",
		"tslint": "^5.20.1",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"tree-sitter": "^0.16.0",
		"web-tree-sitter": "^0.16.2"
	}
}

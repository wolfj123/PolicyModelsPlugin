language: node_js
node_js: 
  - "stable"

before_script: 
  - cd plugin
  - rm -rf node_modules
  - cd client 
  - rm -rf node_modules
  - cd ../server 
  - rm -rf node_modules
  - cd ../
    
script:  
  - npm cache clean --force
  - npm install
  - npm audit fix
  - npm run compile
  - npm run test

  
after_failure:     
  - for v in /home/travis/.npm/_logs/*.log ; do
    echo $v logtail ======================== ; tail -100 $v ;
    done
  
notifications:
  email:
    recipients:
      - wolfj@post.bgu.ac.il
    on_failure: always